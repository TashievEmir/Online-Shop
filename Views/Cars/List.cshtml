

<h1>All cars</h1>
<h3>@Model.currentCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var car in Model.allCars)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@car.Img" alt="@car.Name" width="200" height="200">
                <h2>@car.Name</h2>
                <p>@car.shortDesc</p>
                <p>Price: @car.Price.ToString("c")</p>
                <p><a class="btn btn-warning" href="#">More</a></p>
            </div>
        }
    }
</div>



